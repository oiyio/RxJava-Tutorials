<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_conditional_observables_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This example is intended to demonstrate some conditional operators as well as some operators that make boolean evaluation." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Emitted numbers:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmittedNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnStartSkipWhileTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start SkipWhile Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartSkipUntilTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start SkipUntil Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartTakeWhileTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start TakeWhile Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartTakeUntilTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start TakeUntil Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartAmbOperatorTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Amb Operator Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartAllOperatorTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start All Operator Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartContainsOperatorTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Contains Operator Test"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnStartExistsOperatorTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Exists Operator Test"
                    android:textAllCaps="false" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
